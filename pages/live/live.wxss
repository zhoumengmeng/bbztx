.comment-pics{
    overflow: hidden;
}
.comment-pics-item{
    position: relative;
    float: left;
    margin-bottom: 10px;
    margin-right: 3px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #fff;
    width: 150rpx;
    text-align: center;
    height: 150rpx;
    line-height: 200rpx;
}
.comment-pics-item image{
    width:100%;
    height:100%;
}
.comment-pics-item .del{
    position:absolute;
    bottom:0;
    left:0;
    right:0;
    height:40rpx;
    line-height:40rpx;
    border-radius:0;
    background: #ea5404;
    color:#fff;
    opacity:0.9;
    filter:opacity(0.9);
    font-size:24rpx;
}
.comment-pics-item .icon{
    font-size: 45px;
    color: #595757;
}
.live-list-item{
    position: relative;
    padding-left: 15px;
    border-left: 1px solid #ea5404;
}
.yuan{
    position: absolute;
    left: -8px;
    width: 15px;
    height: 15px;
    background:url("data:image/jpg;base64,");
    background-size:cover;
}
.live-title{
    color: #ea5404;
    font-size: 26rpx;
}
.live-subtitle{
    font-size:28rpx;
