/* pages/child_detail/child_detail.wxss */
.child-tabs{
    z-index: 10;
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -ms-flex-item-align: center;
    -webkit-align-self: center;
    align-self: center;
    -webkit-box-lines: single;
    -moz-box-lines: single;
    -webkit-flex-wrap: nowrap;
    flex-wrap: nowrap;
    background: none;
    border-bottom: 1px solid #ea5404;
    font-size: 28rpx;
}
.child-tabs .tab-link{
    color: #ea5404;
    border-bottom: none;
    border-right: 1px solid #ea5404;
    height: 1.5rem;
    line-height: 1.5rem;
    bottom: 0;
    -webkit-box-flex: 1;
    width:100%;
    text-align:center;
}
.child-tabs .tab-link.active{
    background: #ea5404;
    color:#fff;
}
.child-tabs .tab-link.last{
    border-right:none;
}
.child-form{
    margin:0;
    color:#fff;
}
.list-block.child-form .item-title.label, .list-block.comment-form .item-title.label{
    width:25%;
    color:#ea5404;
    font-size:28rpx;
}
.child-form .item-input input, .child-form  .item-input picker, .child-form  .item-input textarea {
    width:98%;
    border-radius: 0.3rem;
    background: #fff;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    padding-left:6rpx;
    color:#3d4145;
}
.comment-pics{
    overflow: hidden;
}
.comment-pics-item{
    position: relative;
    float: left;
    margin-bottom: 10px;
    margin-right: 3px;
    background-position: center center;
    background-repeat: no-repeat;
    background-size: cover;
    background-color: #fff;
    width: 150rpx;
    text-align: center;
    height: 150rpx;
    line-height: 200rpx;
}
.comment-pics-item image{
    width:100%;
    height:100%;
}
.comment-pics-item .del{
    position:absolute;
    bottom:0;
    left:0;
    right:0;
    height:40rpx;
    line-height:40rpx;
    border-radius:0;
    background: #ea5404;
    color:#fff;
    opacity:0.9;
    filter:opacity(0.9);
    font-size:24rpx;
}
.comment-pics-item .icon{
    font-size: 45px;
    color: #595757;
}
.baby-record {
    display: -webkit-box;
    display: -ms-flexbox;
    display: -webkit-flex;
    display: flex;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    -webkit-box-flex: 1;
    -ms-flex: 1;
    -webkit-box-pack: justify;
    -ms-flex-pack: justify;
    -webkit-justify-content: space-between;
    justify-content: space-between;
    -webkit-box-align: center;
    -ms-flex-align: center;
    -webkit-align-items: center;
    align-items: center;
    margin: 20rpx 20rpx 0;
    padding: 0;
    font-size: 28rpx;
    list-style: none;
    color: #fff;
}
.baby-record .col-25 {
    text-align: center;
    white-space: nowrap;
    margin-left: 4%;
}
.baby-record .col-25.last{
    border-left: 1px solid #9fa0a0;
    padding-left: 4%;
    width: 21%;
}
.baby-record image,.comment-form image{
    width:100rpx;
    height:100rpx;
    border-radius:50%;
}
.baby-record .icon {
    font-size: 40rpx;
    vertical-align: top;
    color: #c9caca;
}
.honour-text{
    display:inline-block;
    width:70%;
    margin-right:20rpx;
}
.record-content {
    background: #fff;
    margin: 10px;
    border-radius: 8px;
    font-size: 14px;
}
.record, .record-desc {
    padding: 0.5rem;
}
.record-name{
    display:inline-block;
    margin-right:40rpx;
}
.record-title .ltitle {
    display: inline-block;
    max-width: 28%;
    margin-right: 2%;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.record-title .rtitle {
    display: inline-block;
    max-width: 70%;
    font-size: 32rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    overflow: hidden;
}
.record image{width: 100%;}

.comment-form{
    margin:0;
    color:#fff;
    padding-bottom:20rpx;
    border-bottom:1px solid #ea5404;
}
.comment-form .item-input input{
    width:98%;
    border-radius: 0.3rem;
    background: #fff;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    padding-left:6rpx;
    color:#3d4145;
}
.comment-form.list-block .item-content.w50 .item-title.label {
    width: 52%;
}
.info-form{
    margin-top:20rpx;
    color:#fff;
}
.info-form .info-label {
    float: left;
    width: 25%;
    margin-top: 10rpx;
    color: #ea5404;
    font-size: 28rpx;
}
.info-list{
    padding-left:25%;
}
.info-form .icon{
    margin:0 2px;
}
.info-form input{
    width:98%;
    border-radius: 0.3rem;
    background: #fff;
    height: 60rpx;
    line-height: 60rpx;
    font-size: 28rpx;
    padding-left:6rpx;
    color:#3d4145;
}
.info-form-item{
    margin-bottom:20rpx;
}
.info-form .label-radio{
    display:inline-block;
    margin-bottom:10rpx;
}
.info-list .w47{
    display: inline-block;
    width:45%;
}
.info-list .w47.mRight2{
    margin-right:2%;
}